<!DOCTYPE html>
<html>
<head lang="zh-cn">
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    <script type="text/javascript">
        function onlyShowLogin() {
            $("#_register").hide();
            $("#_login").slideDown(600);
        }
        function onlyShowRegister() {
            $("#_login").hide();
            $("#_register").slideDown(600);
        }
        function closeAll() {
            $("#_register").hide();
            $("#_login").hide();
        }
    </script>
</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <a href="/Home/Index">
                <img class="navbar-left" style="margin-top: 6px; cursor: pointer; " src="~/PicRes/logo.png" />
            </a>
            <form class="navbar-form navbar-left" role="search">
                <div class="form-group" style="margin-top: 1px;">
                    <input type="text" class="form-control " style="width: 300px;" placeholder="教师或试卷的信息" />
                    <button type="submit" class="button button-flat-primary" style="margin-left: -4px;">搜 索</button>
                </div>
            </form>
            <div>
                @Html.Partial("_AccountPartial")
            </div>
        </div>
    </div>
    <div class="container body-content">
        @RenderBody()
    </div>  
    <footer style="background-color: #f7f7f7; padding-top: 10px; padding-bottom: 10px; ">
        <p id="copyright">Copyright &copy; @DateTime.Now.Year - @(DateTime.Now.Year + 1) <a style="text-decoration: none;" href="/Home/Index">papershare.cn</a> , All Rights Reserved</p>
    </footer>
    <div>
        @Html.Partial("_LoginPartial")
        @Html.Partial("_RegisterPartial")
    </div>
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/jqueryval")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
    <script type="text/javascript">
        $(document).ready(function () {
            var height = $(window).height() - 130;
            $(".body-content").css("min-height", height);
        });
    </script>
    <script src="~/Scripts/jquery.unobtrusive-ajax.js"></script>
</body>
</html>