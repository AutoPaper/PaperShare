<!DOCTYPE html>
<html>
<head lang="zh-cn">
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    <script type="text/javascript">
        function onlyShowLogin() {
            $("#_register").hide();
            $("#_login").slideDown(600);
        }
        function onlyShowRegister() {
            $("#_login").hide();
            $("#_register").slideDown(600);
        }
        function closeAll() {
            $("#_register").hide();
            $("#_login").hide();
        }
    </script>
</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                @Html.ActionLink("卷库网", "Index", "Home", null, new { @class = "navbar-brand" })
            </div>
            <ul class="nav navbar-nav">
                <li><p style="font-size: 20px; color: #32cd32; font-family: Consolas; margin-top: 10px;">papershare.cn</p></li>
            </ul>
            <form class="navbar-form navbar-left" role="search">
                <div class="form-group">
                    <input type="text" class="form-control" placeholder="教师或试卷的信息">
                    <button type="submit" class="button button-flat-primary" style="margin-left: -5px;">搜 索</button>
                </div>
            </form>
            <div>
                @Html.Partial("_AccountPartial")
            </div>
        </div>
    </div>
    <div class="container body-content">
        @RenderBody()
    </div>  
    <footer style="background-color: #f7f7f7; padding-top: 10px; padding-bottom: 10px; ">
        <p id="copyright">Copyright &copy; @DateTime.Now.Year - @(DateTime.Now.Year + 1) papershare.cn , All Rights Reserved</p>
    </footer>
    <div>
        @Html.Partial("_LoginPartial")
        @Html.Partial("_RegisterPartial")
    </div>
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>